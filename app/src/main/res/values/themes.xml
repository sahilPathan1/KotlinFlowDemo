<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinFlowDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyEditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:background">@color/gray</item> //NO UNDERBAR
        <item name="android:maxLines">1</item>
        <item name="android:height">28dp</item> //COMMON HEIGHT
    </style>

</resources>